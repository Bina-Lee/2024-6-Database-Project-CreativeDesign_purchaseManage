<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purchase Management</title>
</head>
<body>
  <h1>Purchase Management</h1>
  <form action="/add" method="post">
    <input type="text" name="name" placeholder="Purchase Name" required />
    <input type="number" name="amount" placeholder="Amount" required />
    <button type="submit">Add Purchase</button>
  </form>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% purchases.forEach(purchase => { %>
        <tr>
          <td><%= purchase.id %></td>
          <td><%= purchase.name %></td>
          <td><%= purchase.amount %></td>
          <td>
            <form action="/edit/<%= purchase.id %>" method="post" style="display: inline;">
              <input type="text" name="name" value="<%= purchase.name %>" required />
              <input type="number" name="amount" value="<%= purchase.amount %>" required />
              <button type="submit">Update</button>
            </form>
            <form action="/delete/<%= purchase.id %>" method="post" style="display: inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
